<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <org.fs.component.media.widget.AspectFrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextureView
      android:id="@+id/viewTexture"
      android:layout_width="match_parent"
      android:layout_height="match_parent" />

    <TextView
      android:id="@+id/viewTextElapsedTime"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="top|end"
      android:layout_margin="8dip"
      android:textSize="14sp"
      tools:text="00:00"
      android:textColor="@android:color/white" />

    <ImageButton
      android:id="@+id/viewButtonCamera"
      android:layout_width="36dip"
      android:layout_height="36dip"
      android:layout_gravity="bottom|start"
      android:layout_margin="8dip"
      android:background="@android:color/transparent"
      android:src="@drawable/ic_change_camera" />

    <ImageButton
      android:id="@+id/viewButtonFlash"
      android:layout_width="36dip"
      android:layout_height="36dip"
      android:layout_gravity="bottom|end"
      android:layout_margin="8dip"
      android:background="@android:color/transparent"
      android:src="@drawable/state_flash" />

  </org.fs.component.media.widget.AspectFrameLayout>

  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">

    <ImageButton
      android:id="@+id/viewButtonCapture"
      android:layout_width="64dip"
      android:layout_height="64dip"
      android:layout_gravity="center"
      android:background="@android:color/transparent"
      android:src="@drawable/state_capture_video" />

    <org.fs.component.media.widget.SelectableImageView
      android:id="@+id/viewPreview"
      android:layout_gravity="end|center_vertical"
      android:layout_marginEnd="8dip"
      tools:src="@drawable/ic_video_place_holder"
      android:layout_width="72dip"
      android:layout_height="72dip" />

  </FrameLayout>

</LinearLayout>